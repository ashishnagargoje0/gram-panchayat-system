# docker-compose.yml
version: "3.8"

services:
  db:
    image: postgres:15
    container_name: gp_db
    restart: unless-stopped
    environment:
      POSTGRES_USER: gp_user
      POSTGRES_PASSWORD: gp_password
      POSTGRES_DB: gram_panchayat
    volumes:
      - pgdata:/var/lib/postgresql/data
      - ./database:/docker-entrypoint-initdb.d:ro   # optional: run SQL seeds on first start
    ports:
      - "5432:5432"

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: gp_backend
    restart: on-failure
    depends_on:
      - db
    env_file:
      - ./backend/.env
    ports:
      - "8080:8080"
    volumes:
      - ./backend:/app
    command: ["./cmd/server"] # if your Dockerfile just runs the server, you can remove this

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: gp_frontend
    restart: on-failure
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
    environment:
      - VITE_API_URL=http://localhost:8080

volumes:
  pgdata:
